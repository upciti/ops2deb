{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":prImmediately"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "merge"
    }
  ]
}
